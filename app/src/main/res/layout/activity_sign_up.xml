<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context="izradio.payghost.com.SignUp">

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:id="@+id/welcomelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/izradio"
            android:id="@+id/ima"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:shadowColor="#000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.0"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            android:layout_below="@+id/ima"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="Welcome To Izingane Online Radio App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signuplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/signup_name"
        android:fontFamily="serif"
        android:paddingLeft="10dp"
        android:hint="Name"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


     <EditText
         android:layout_marginTop="20dp"
       android:id="@+id/signup_skul_name"
        android:layout_below="@+id/signup_name"
        android:fontFamily="serif"
        android:paddingLeft="10dp"
        android:hint="School Name"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

     <EditText
         android:id="@+id/signup_number"
        android:layout_marginTop="20dp"
        android:maxLength="10"
        android:layout_below="@+id/signup_skul_name"
        android:fontFamily="serif"
        android:paddingLeft="10dp"
        android:hint="Number"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSignup"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/signup_number"
        android:text="Submit"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/contin"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnSignup"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true"
            card_view:theme="@style/AlertDialog.AppCompat">

            <TextView
                android:padding="7dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue..."/>
        </android.support.v7.widget.CardView>

</RelativeLayout>
</RelativeLayout>
