<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="5dp"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPaddingLeft="10dp"
    card_view:contentPaddingTop="10dp"
    card_view:contentPaddingBottom="8dp"
    card_view:contentPaddingRight="10dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:theme="@style/AlertDialog.AppCompat"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:id="@+id/tvShowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Name" />

        <TextView
            android:maxLength="16"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:layout_below="@+id/tvShowName"
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="Message" />

        <TextView
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:layout_below="@+id/tvMessage"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Date" />

        <ImageView
            android:id="@+id/ads_share"
            card_view:srcCompat="@drawable/ic_menu_share"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/noimage" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_delete"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            card_view:backgroundTint="@color/colorWhite"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_gal_trash"
            app:fabSize="mini"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
