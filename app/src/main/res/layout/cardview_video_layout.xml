<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPaddingLeft="3dp"
    card_view:contentPaddingTop="5dp"
    card_view:contentPaddingBottom="5dp"
    card_view:contentPaddingRight="3dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:theme="@style/AlertDialog.AppCompat">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/gallery_image"
            android:layout_width="match_parent"
            android:layout_height="112dp"/>
        <ImageView
            android:src="@drawable/video_play"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/videoplay"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:background="@drawable/video_time_shape"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="time"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vid_time"/>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>
